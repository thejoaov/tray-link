{
  "name": "tray-link",
  "version": "1.1.4",
  "description": "An app to manage your projects from the system tray",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "prewatch": "npm run prebuild",
    "watch": "tsc -w",
    "lint": "eslint --ext .ts ./src",
    "prestart": "npm run build",
    "start": "electron-forge start",
    "dev": "NODE_ENV=development nodemon --watch ./ --exec \"npm run start\" -e ts,js,json -i ./dist",
    "format": "prettier --write \"./src/**/*.{js,ts}\"",
    "prepackage": "npm run build",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish --from-dry-run"
  },
  "repository": "https://github.com/thejoaov/tray-link",
  "keywords": [
    "Electron",
    "typescript",
    "Visual Studio Code",
    "Terminal",
    "system-tray",
    "project-management",
    "VSCode",
    "terminal",
    "folder-navigation",
    "productivity",
    "code-editing",
    "developer-tools",
    "task-automation",
    "quick-access",
    "file-organization",
    "project-folder",
    "code-organization",
    "easy-navigation",
    "workflow-enhancement",
    "developer-productivity",
    "cross-platform",
    "nodejs"
  ],
  "author": "thejoaov",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^6.2.1",
    "@electron-forge/maker-deb": "^6.2.1",
    "@electron-forge/maker-rpm": "^6.2.1",
    "@electron-forge/maker-squirrel": "^6.2.1",
    "@electron-forge/maker-zip": "^6.2.1",
    "@electron-forge/plugin-auto-unpack-natives": "^6.2.1",
    "@electron-forge/publisher-github": "^6.2.1",
    "@types/command-exists": "^1.2.0",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "electron": "^24.3.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "command-exists": "^1.2.9",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "execa": "^2.0.0-alpha.0",
    "fix-path": "^3.0.0",
    "rimraf": "^5.0.1",
    "tsconfig-paths": "^4.2.0",
    "update-electron-app": "^2.0.1",
    "uuid": "^9.0.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npx prettier --write \"./src/**/*.{js,ts}\"",
      "eslint --ext .ts ./src --fix"
    ]
  }
}
