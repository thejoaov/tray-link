{
  "name": "vs-tray",
  "description": "Open your Projects from tray menu on Visual Studio Code, and other useful options.",
  "version": "0.1.0-beta",
  "main": "main.js",
  "repository": "https://github.com/thejoaov/vs-tray",
  "author": "Jo√£o Victor <jvictorsantos852@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn electron .",
    "dev": "nodemon --exec electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:all": "electron-builder -lwm",
    "dist:mac": "electron-builder --mac",
    "dist:windows": "electron-builder --windows",
    "dist:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@sentry/electron": "^1.1.0",
    "electron-store": "^5.1.0",
    "fix-path": "^2.1.0"
  },
  "devDependencies": {
    "electron": "^4.0.0",
    "electron-builder": "^22.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.1.2",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1"
  },
  "build": {
    "appId": "com.thejoaov.vstray",
    "productName": "VS Tray",
    "publish": {
      "provider": "github"
    },
    "mac": {
      "icon": "icons/icons.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "category": "Development",
      "icon": "icon.png",
      "target": [
        "snap",
        "deb",
        "rpm"
      ]
    },
    "snap": {
      "confinement": "classic",
      "publish": {
        "provider": "github"
      }
    }
  }
}
