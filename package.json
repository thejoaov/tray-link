{
  "name": "vs-tray",
  "description": "Open VSCode projects from tray menu.",
  "version": "0.0.6",
  "main": "main.js",
  "repository": "https://github.com/thejoaov/vs-tray",
  "author": "Jo√£o Victor <jvictorsantos852@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:all": "npm-run-all -p dist:*",
    "dist:lw": "yarn dist:linux && yarn dist:windows",
    "dist:mac": "electron-builder --mac",
    "dist:windows": "electron-builder --windows",
    "dist:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@sentry/electron": "0.17.1",
    "electron-store": "^4.0.0",
    "fix-path": "^2.1.0",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "electron": "^5.0.7",
    "electron-builder": "^21.0.15",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-prettier": "^3.1.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2"
  },
  "build": {
    "appId": "com.thejoaov.vstray",
    "productName": "VS Tray",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "category": "Development",
      "icon": "assets/icon.png",
      "target": [
        "deb",
        "snap",
        "rpm"
      ]
    },
    "snap": {
      "confinement": "classic"
    }
  }
}
