{
  "name": "vs-tray",
  "description": "Open your Projects from tray menu on Visual Studio Code, and other useful options.",
  "version": "v0.0.13",
  "main": "main.js",
  "repository": "https://github.com/thejoaov/vs-tray",
  "author": "Jo√£o Victor <jvictorsantos852@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn electron .",
    "dev": "nodemon --exec electron .",
    "pack": "yarn electron-builder --dir",
    "dist": "yarn electron-builder",
    "dist:all": "npm-run-all -p dist:*",
    "dist:windows": "yarn electron-builder --windows",
    "dist:linux": "yarn electron-builder --linux",
    "dist:mac": "yarn electron-builder --mac",
    "postinstall": "yarn electron-builder install-app-deps",
    "release": "yarn electron-builder -lw"
  },
  "dependencies": {
    "@sentry/electron": "^0.17.4",
    "electron-store": "^5.0.0",
    "fix-path": "^2.1.0",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "electron": "^4.0.0",
    "electron-builder": "^19.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-prettier": "^3.1.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2"
  },
  "build": {
    "appId": "com.thejoaov.vstray",
    "productName": "VS Tray",
    "publish": [
      "github"
    ],
    "mac": {
      "icon": "icons/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "icon": "icons/icon.ico",
      "publisherName": "thejoaov"
    },
    "linux": {
      "category": "Development",
      "target": [
        "snap",
        "deb",
        "rpm"
      ]
    },
    "snap": {
      "confinement": "classic"
    }
  }
}
