{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strictPropertyInitialization": false,
    "strictBindCallApply": false,
    "strictFunctionTypes": false,
    "alwaysStrict": false,
    "esModuleInterop": true,
    "strict": false,
    "paths": {
      "*": ["node_modules/*"],
      "../../": ["src/*"]
    }
  },
  "include": ["src/**/*"]
}
